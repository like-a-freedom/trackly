{
    "id": null,
    "uid": "backend-api",
    "title": "Backend API Golden Signals",
    "schemaVersion": 39,
    "version": 1,
    "tags": [
        "backend",
        "golden-signals"
    ],
    "templating": {
        "list": [
            {
                "name": "env",
                "type": "query",
                "query": "label_values(env)",
                "current": {
                    "text": "prod",
                    "value": "prod"
                }
            },
            {
                "name": "service",
                "type": "query",
                "query": "label_values(service)",
                "current": {
                    "text": "backend",
                    "value": "backend"
                }
            },
            {
                "name": "instance",
                "type": "query",
                "query": "label_values(instance)",
                "includeAll": true
            },
            {
                "name": "route",
                "type": "query",
                "query": "label_values(http_requests_total, route)",
                "includeAll": true
            },
            {
                "name": "status_class",
                "type": "query",
                "query": "label_values(http_requests_total, status_class)",
                "includeAll": true
            }
        ]
    },
    "panels": [
        {
            "type": "graph",
            "title": "Request Rate (rps)",
            "targets": [
                {
                    "expr": "sum by(route,method) (rate(http_requests_total{env=~\"$env\",service=~\"$service\",instance=~\"$instance\",route=~\"$route\"}[5m]))"
                }
            ]
        },
        {
            "type": "graph",
            "title": "Latency p50/p90/p99",
            "targets": [
                {
                    "expr": "histogram_quantile(0.5, sum by(le) (rate(http_request_duration_seconds_bucket{env=~\"$env\",service=~\"$service\",instance=~\"$instance\",route=~\"$route\"}[5m])))"
                },
                {
                    "expr": "histogram_quantile(0.9, sum by(le) (rate(http_request_duration_seconds_bucket{env=~\"$env\",service=~\"$service\",instance=~\"$instance\",route=~\"$route\"}[5m])))"
                },
                {
                    "expr": "histogram_quantile(0.99, sum by(le) (rate(http_request_duration_seconds_bucket{env=~\"$env\",service=~\"$service\",instance=~\"$instance\",route=~\"$route\"}[5m])))"
                }
            ]
        },
        {
            "type": "graph",
            "title": "Error Rate",
            "targets": [
                {
                    "expr": "sum(rate(http_requests_errors_total{env=~\"$env\",service=~\"$service\",instance=~\"$instance\",route=~\"$route\",status_class=~\"$status_class\"}[5m])) / sum(rate(http_requests_total{env=~\"$env\",service=~\"$service\",instance=~\"$instance\",route=~\"$route\"}[5m]))"
                }
            ]
        },
        {
            "type": "stat",
            "title": "In-flight Requests",
            "targets": [
                {
                    "expr": "sum(http_requests_in_flight{env=~\"$env\",service=~\"$service\",instance=~\"$instance\"})"
                }
            ]
        },
        {
            "type": "graph",
            "title": "Request Size (bytes)",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum by(le) (rate(http_request_size_bytes_bucket{env=~\"$env\",service=~\"$service\",route=~\"$route\"}[5m])))"
                }
            ]
        },
        {
            "type": "graph",
            "title": "Response Size (bytes)",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum by(le) (rate(http_response_size_bytes_bucket{env=~\"$env\",service=~\"$service\",route=~\"$route\",status_class=~\"$status_class\"}[5m])))"
                }
            ]
        },
        {
            "type": "graph",
            "title": "Pipeline Latency",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum by(le) (rate(track_pipeline_latency_seconds_bucket{env=~\"$env\",service=~\"$service\"}[5m])))"
                }
            ]
        },
        {
            "type": "graph",
            "title": "DB Query Duration (p95)",
            "targets": [
                {
                    "expr": "histogram_quantile(0.95, sum by(le,operation) (rate(db_query_duration_seconds_bucket{env=~\"$env\",service=~\"$service\"}[5m])))"
                }
            ]
        },
        {
            "type": "graph",
            "title": "DB Pool Usage",
            "targets": [
                {
                    "expr": "sum by(state) (db_pool_connections{env=~\"$env\",service=~\"$service\"})"
                }
            ]
        }
    ]
}